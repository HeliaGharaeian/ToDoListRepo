@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body dir="auto">
    <style>
        .button
        {
            border: none;
            background-color:orange;
            color:azure;
            width: 100px;
            border-radius: 4px;
        }
    </style>

        <b>
            Today
        </b>
        <br />
    <small>
        @DateTime.Today.DayOfWeek
        @DateOnly.FromDateTime(DateTime.Now)
    </small>
    <br />
    <br />
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <div class="container">


        <form method="post">

            <div class="row">
                <div class="col-md-4">
                    <input class="form-control" value="Task name" asp-for="ToDoListContext.Content" />
                    <span class="alert-danger" asp-validation-for="ToDoListContext.Content"></span>
                </div>

            </div>
            <br />
            <input type="submit" value="Add" class="button" />


        </form>
    </div>

</body>
